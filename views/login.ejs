        <body class="base">
            <center>
            
                <h1>Login Page!</h1>
                <form method="post" action="/lgcheck">
                    <table>
                        <tr>
                            <td><label>ID : </label></td>
                            <td><input type="text" id="id" name="id"></td>
                        </tr>
                        <tr>
                            <td><label>PW : </label></td>
